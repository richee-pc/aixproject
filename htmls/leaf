  <nav class="bg-green-600 text-white p-4">
    <div class="container mx-auto">
      <h1 class="text-2xl font-bold">🌿 나뭇잎 나뭇잎맥 구별기</h1>
    </div>
  </nav>

  <main class="container mx-auto px-4 py-8">

    <!-- 탭 메뉴 -->
    <div class="mb-6 flex space-x-4">
      <button onclick="openTab('inputTab')" class="tab-btn bg-green-600 text-white px-4 py-2 rounded">✏️ 입력</button>
      <button onclick="openTab('resultTab')" class="tab-btn bg-gray-300 text-gray-800 px-4 py-2 rounded">🧪 결과</button>
      <button onclick="openTab('dataTab')" class="tab-btn bg-gray-300 text-gray-800 px-4 py-2 rounded">📊 데이터</button>
    </div>

    <!-- 입력 폼 -->
    <div id="inputTab" class="tab-content active">
      <div class="bg-white p-6 rounded-lg shadow-md max-w-md">
        <h2 class="text-xl font-bold mb-4">📏 잎맥 구별 입력</h2>
        <form id="leafForm" class="space-y-4" onsubmit="handleForm(event)">
          <div>
            <label for="length" class="block text-gray-700">잎 길이 (cm)</label>
            <input type="number" id="length" step="0.1" required class="w-full border rounded px-3 py-2" />
          </div>
          <div>
            <label for="width" class="block text-gray-700">잎 너비 (cm)</label>
            <input type="number" id="width" step="0.1" required class="w-full border rounded px-3 py-2" />
          </div>
          <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">✅ 분류하기</button>
        </form>
      </div>
    </div>

    <!-- 결과 탭 -->
    <div id="resultTab" class="tab-content">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold mb-4">🧪 분류 결과</h3>
        <p id="resultText" class="text-lg text-green-700 font-semibold">아직 입력된 데이터가 없습니다.</p>
      </div>
    </div>

