  <!-- 자바스크립트: 탭 기능 및 결과 출력 -->
  <script>
    function openTab(tabId) {
      document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
      document.querySelector(`#${tabId}`).classList.add('active');

      document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('bg-green-600', 'text-white'));
      event.target.classList.add('bg-green-600', 'text-white');
    }

    function handleForm(event) {
      event.preventDefault();
      const length = parseFloat(document.getElementById('length').value);
      const width = parseFloat(document.getElementById('width').value);

      // 샘플 분류 로직 (기계학습 대체용)
      let kind = '';
      if (length > 15 && width > 7) kind = "Maple";
      else if (length < 10 && width > 6) kind = "Birch";
      else if (length < 10) kind = "Ginkgo";
      else if (width > 8) kind = "Oak";
      else kind = "Pine";

      const result = `입력된 길이 ${length}cm, 너비 ${width}cm의 잎은 <strong>${kind}</strong> 잎맥으로 분류됩니다.`;

      document.getElementById('resultText').innerHTML = result;
      openTab('resultTab');
    }
  </script>

